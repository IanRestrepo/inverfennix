---
const navLinks = [
  { name: 'Home', url: '/' },
  { name: 'Services', url: '/services' },
  { name: 'Contact', url: '/contact' },
];

---

<nav class="flex justify-between py-5 px-10 items-center ">
    <div class="max-w-[50px]">
        <a href="/">
            <img src="/russian-club-1.svg" alt="">
        </a>
    </div>

    <input type="text" class="border-2 border-slate-300 bg-slate-200 rounded-full w-1/3 h-12 px-5 text-center hover:shadow-xl hover:shadow-gray-300 transition-all outline-none font-bold uppercase"  placeholder="DFM MICROBUS 7 PASS"/>
    <div>
        <ul class="flex gap-8 justify-center">
            { 
                navLinks.map((page)=> {
                    return (
                        <li class='font-bold'><a href={page.url}>{page.name}</a></li>
                    )
                })
            }
        </ul>
    </div>
</nav>